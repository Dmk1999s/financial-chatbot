[Unit]
Description=Celery Worker Service
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/srv/ubuntu/naughtyDjango
Environment=PATH=/home/ubuntu/.local/share/virtualenvs/ubuntu-*/bin
ExecStart=/home/ubuntu/.local/share/virtualenvs/ubuntu-*/bin/celery -A main worker -l info --concurrency=2
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
